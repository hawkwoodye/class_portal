<h1>Post grade for <%=User.find_by(id: @enrollment.user_id).name %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@enrollment) do |f| %>
        <% if @enrollment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@enrollment.errors.count, "error") %> prohibited this enrollment from being saved:</h2>
    
              <ul>
                <% @enrollment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
    
      <div class="form-group center field">
          <%= f.label :course_title %><br>
          <%= f.text_field :title, :value => @enrollment.course.title,:readonly => true %>
    
          <%= f.hidden_field :course_id, :value => @enrollment.course_id %>
      </div>   
        <div class="form-group center field">
          <%= f.label :grade %>
          <%= f.number_field :grade %>
        </div>
        <div class="form-group center actions">
          <%= f.submit class:'btn btn-primary'%>
        </div>
      
    <% end %>

  </div>
</div>